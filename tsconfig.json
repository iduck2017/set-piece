{
    "compilerOptions": {
      "target": "ESNext",
      "noImplicitAny": true,
      "declaration": true,
      "declarationDir": "./dist/type",
      "lib": ["ES2018", "DOM"],
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "node",
      "strict": true,
      "experimentalDecorators": true,
      "strictFunctionTypes": true,
      "stripInternal": true,
      "paths": {},
      "noUncheckedIndexedAccess": true
    },
    "include": [ "src/**/*" ],
    "exclude": [ "tmp/**/*" ]
}